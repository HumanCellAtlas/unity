<h1>My Billing Projects</h1>

<div class="row">
  <div class="col-md">
    <div class="table-responsive">
      <table class="table table-striped table-active" id="projects">
      <thead>
        <tr>
          <th>Namespace</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.namespace %></td>
            <td>
              <%= link_to 'Details', project, class: 'btn btn-sm btn-primary' %>
              <%= link_to 'Workspaces', workspaces_project_path(project), class: 'btn btn-sm btn-secondary' %>
              <%= link_to 'Remove', project, method: :delete, data: { confirm: "Are you sure you want to remove '#{project.namespace}'?  You will not be able to use it with Unity unless you re-register it." }, class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <p>
      <%= link_to 'Register an Existing Project', new_project_path, class: 'btn btn-lg btn-success' %>
      <%= link_to 'Create a New Project', new_project_from_scratch_path, class: 'btn btn-lg btn-primary' %>
    </p>
  </div>
</div>

<script type="text/javascript">

    $('#projects').DataTable({
        pagingType: 'full_numbers'
    });

</script>