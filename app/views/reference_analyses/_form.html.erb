<%= nested_form_for(reference_analysis, html: {class: 'form', multipart: true}) do |form| %>
  <% if reference_analysis.errors.any? %>
    <div class="bs-callout bs-callout-danger" id="reference-analysis-errors-block">
      <h4><%= pluralize(reference_analysis.errors.count, "error") %> prohibited this reference analysis from being saved:</h4>

      <ul>
      <% reference_analysis.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <div class="col-sm">
      <%= form.label :firecloud_project %>
      <%= form.text_field :firecloud_project, class: 'form-control' %>
    </div>

    <div class="col-sm">
      <%= form.label :firecloud_workspace %>
      <%= form.text_field :firecloud_workspace, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm">
      <%= form.label :analysis_wdl %>
      <%= form.text_field :analysis_wdl, class: 'form-control' %>
    </div>

    <div class="col-sm">
      <%= form.label :benchmark_wdl %>
      <%= form.text_field :benchmark_wdl, class: 'form-control' %>
    </div>

    <div class="col-sm">
      <%= form.label :orchestration_wdl %>
      <%= form.text_field :orchestration_wdl, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm">
      <h4>Input/Output Files</h4>
      <%= form.fields_for :reference_analysis_data, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm">
      <%= form.link_to_add "<span class='fa fa-plus'></span> Add input/output files".html_safe, :reference_analysis_data, class: 'btn btn-sm btn-primary',
                           id: 'add-reference-analysis-data' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm">
      <h4>Additional Options</h4>
      <%= form.fields_for :reference_analysis_options %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm">
      <%= form.link_to_add "<span class='fa fa-plus'></span> Add options".html_safe, :reference_analysis_options, class: 'btn btn-sm btn-secondary',
                           id: 'add-reference-analysis-options' %>
    </div>
  </div>



  <div class="form-group row">
    <div class="col-sm">
      <%= form.label :submit, "&nbsp;".html_safe %><br />
      <%= form.submit 'Save', class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
