<h1>My Benchmark Workspaces</h1>

<div class="row">
  <div class="col-md">
    <div class="table-responsive">
      <table class="table table-striped table-active" id="my-benchmarks">
        <thead>
          <tr>
            <th>Name</th>
            <th>Reference Analysis</th>
            <th>My Analysis</th>
            <th>Submissions</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @user_workspaces.each do |user_workspace| %>
            <tr>
              <td><%= user_workspace.name %></td>
              <td><%= user_workspace.reference_analysis.analysis_wdl %></td>
              <td>N/A</td>
              <td>0</td>
              <td class="actions">
                <%= link_to 'Benchmark', user_workspace_path(project: user_workspace.namespace, name: user_workspace.name), class: 'btn btn-sm btn-primary' %>&nbsp;
                <%= link_to 'Delete', user_workspace_path(project: user_workspace.namespace, name: user_workspace.name), method: :delete, data: { confirm: 'Are you sure you want to delete this benchmark workspace?' },
                            class: 'btn btn-sm btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script type="text/javascript">

    $('#my-benchmarks').DataTable({
        pagingType: 'full_numbers'
    });

</script>